@model Dev_6_0874316_Jordi_Roer_INF2A.Order

@{
    ViewBag.Title = "New";
}

<h2>New</h2>


@using (Html.BeginForm("Create", "Order", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p>Voornaam klant</p>
            <div class="col-md-10">
                <div class="">
                    <input type="text" name="firstName" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <p>Tussenvoegsel</p>
            <div class="col-md-10">
                <div class="">
                    <input type="text" name="insertion" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <p>Achternaam klant</p>
            <div class="col-md-10">
                <div class="">
                    <input type="text" name="lastName" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <p>Geboortdedatum klant</p>
            <div class="col-md-10">
                <div class="">
                    <input type="text" name="dateOfBirth" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <p>E-Mail Adres</p>
            <div class="col-md-10">
                <div class="">
                    <input type="text" name="emailAdress" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <p>Stad</p>
            <div class="col-md-10">
                <div class="">
                    <input type="text" name="city" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <p>Geslacht</p>
            <div class="col-md-10">
                <div class="">
                    <select name="sex">
                        <option value="M">M</option>
                        <option value="V">V</option>
                    </select>
                </div>
            </div>
        </div>


        <div class="form-group">
            <p>Klant wacht</p>
            <div class="col-md-10">
                <div class="checkbox">
                    <input type="checkbox" name="customerWaits" value="false"/>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
